@using PoolComVnWebClient.DTO;
@model List<NewsDTO> ;
<div class="container">
    <div class="news-manage">
        <div class="manage-header">Quản lí bài viết</div>
        <div class="mt-5 d-flex justify-content-between">
            <a asp-controller="NewsManage" asp-action="AddNews" class="addBtn d-flex justify-content-center align-items-center">
                Tạo mới
                <i class="fa-solid fa-circle-plus px-3"></i>
            </a>
            <div class="manageSearch d-flex">
                <input class="news-input" placeholder="Title,..." />
                <div class="searchBtn px-3 align-items-center" onclick="Search()">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </div>
            </div>
            <script type="text/javascript">
                const inputElement = document.querySelector('.news-input');
                const buttonElement = document.querySelector('.searchBtn');

                inputElement.addEventListener('keyup', function (event) {
                    if (event.key === 'Enter') {
                        buttonElement.click();
                    }
                });
            </script>
        </div>
        <div class="manage-body mt-3">
            <table>
                <tr>
                    <th class="news-id">#</th>
                    <th class="image">Ảnh</th>
                    <th class="title">Tiêu đề</th>
                    <th class="create-date">Ngày tạo</th>
                    <th class="update-date">Thay đổi</th>
                    <th class="action">Hành động</th>
                </tr>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var news = Model[i];
                    <tr>
                        <td>@(i + 1)</td>
                        <td><img src="~/images/new_1.jpg" /></td>
                        <td>@news.Title</td>
                        <td>@news.CreatedDate</td>
                        <td>@news.UpdatedDate</td>
                        <td>
                            <a href="#"><i class="fa-solid fa-pencil p-2"></i></a>
                            <a href="#"><i class="fa-solid fa-trash-can p-2"></i></a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>