@using PoolComVnWebClient.Common
@model List<PoolComVnWebClient.DTO.TournamentOutputDTO>
<div class="container">
    <div class="tournament">
        <div class="tour-nav d-flex">
            <button class="normal-tour active">Nghiệp dư</button>
            <!-- <button class="special-tour mx-2">Đáng chú ý</button> -->
        </div>

        <div class="normal-body">
            <div class="d-flex justify-content-between mt-4 row">
                <div class="tour-circle d-flex justify-content-lg-start justify-content-end
                    pt-lg-0 pt-3 align-items-center col-lg-6 col-12 order-2 order-lg-1">
                    <div class="schedule-circle"></div>
                    <span>Lên lịch</span>
                    <div class="start-circle"></div>
                    <span>Đang chơi</span>
                    <div class="finish-circle"></div>
                    <span>Kết thúc</span>
                </div>
                <div class="d-flex justify-content-end col-lg-6 col-12 order-1 order-lg-2">
                    <div class="tour-search d-flex justify-content-end align-items-center">
                        <i class="search-btn fa-solid fa-magnifying-glass"></i>
                        <input class="search-input px-2" type="text" placeholder="Giải đấu, địa chỉ,..." />
                    </div>

                    <div class="tour-filter d-flex align-items-center">
                        <div class="filter-btn">
                            <span>Bộ lọc</span>
                            <i class="fa-solid fa-filter px-2"></i>
                        </div>
                        <form class="filter-body d-none">
                            <div class="row">
                                <div class="d-flex justify-content-center col-4">
                                    <select class="tour-type">
                                        <option selected hidden>Thể loại</option>
                                        <option>8 bi</option>
                                        <option>9 bi</option>
                                        <option>10 bi</option>
                                    </select>
                                </div>
@*
                                <div class="d-flex justify-content-center col-4">
                                    <select class="tour-province col-4">
                                        <option selected hidden value="0">Tỉnh</option>
                                        <option>Hà Nội</option>
                                        <option>Quảng Ninh</option>
                                        <option>Hồ Chí Minh</option>
                                    </select>
                                </div>

                                <div class="d-flex justify-content-center col-4">
                                    <select class="tour-city col-4 d-none">
                                        <option selected hidden>Khu vực</option>
                                        <option>Cầu Giấy</option>
                                        <option>Hà Đông</option>
                                        <option>Long Biên</option>
                                    </select>
                                </div>*@
                            </div>

                            <div class="pt-5">
                                <div class="start-date d-flex align-items-center">
                                    <div class="d-flex justify-content-center col-4">
                                        <span>Ngày bắt đầu</span>
                                    </div>
                                    <div class="d-flex justify-content-center col-4">
                                        <input type="date" />
                                    </div>
                                </div>
                                <div class="end-date pt-3 d-flex align-items-center">
                                    <div class="d-flex justify-content-center col-4">
                                        <span>Ngày kết thúc</span>
                                    </div>
                                    <div class="d-flex justify-content-center col-4">
                                        <input type="date" />
                                    </div>
                                </div>
                            </div>

                            <div class="pt-5 row">
                                <div class="d-flex justify-content-center col-6">
                                    <input type="button" class="reset-btn" value="Đặt lại" />
                                </div>
                                <div class="d-flex justify-content-center col-6">
                                    <input type="submit" class="submit-btn" value="Tìm kiếm" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="mt-5 d-flex row">
                @foreach(var tour in Model){
                    <div class="tour-item col-sm-6 col-md-4 col-lg-3">
                        <a href="/Tounament/TournamentDetail?tourId=@tour.TournamentId" class="item-body">
                            @if(tour.Status == Constant.TournamentIncoming){
                                <div class="tour-status schedule-status"></div>
                            }
                            @if (tour.Status == Constant.TournamentInProgress)
                            {
                                <div class="tour-status start-status"></div>
                            }
                            @if (tour.Status == Constant.TournamentComplete)
                            {
                                <div class="tour-status finish-status"></div>
                            }
                            @*<img class="tour-image" src="~/images/new_1.jpg" alt="">*@
                            <img class="tour-image" src="@tour.Flyer" alt="">
                            <div>
                                <div class="tour-type d-flex justify-content-center align-items-center">
                                    @tour.GameType
                                </div>
                            </div>
                            <div class="tour-title">
                                @tour.TournamentName
                            </div>
                            <div class="tour-club d-flex align-items-center">
                                <img class="tour-club-image" src="~/images/VietNamFlag.png" alt="">
                                <span class="px-2">@tour.ClubName</span>
                            </div>
                            <div class="tour-description">
                                @tour.Description
                            </div>
                            <div class="tour-time">
                                <i class="fa-solid fa-calendar-days"></i>
                                <span>@tour.StartTime.ToString("dd/mm/yyyy")</span>
                                -
                                <span>@tour.EndTime.ToString("dd/mm/yyyy")</span>
                            </div>

                            <div class="tour-position">
                                <i class="fa-solid fa-location-dot"></i>
                                <span>@tour.Address</span>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    //tour-nav exchange button
    const normalTourButton = document.querySelector('.normal-tour');
    const normalBody = document.querySelector('.normal-body');
    // const specialTourButton = document.querySelector('.special-tour');
    normalTourButton.addEventListener('click', () => {
        normalTourButton.classList.add('active');
        // specialTourButton.classList.remove('active');
        window.scroll({
            top: 120,
            behavior: 'smooth'
        });
        normalBody.classList.remove('d-none');
    });
    // specialTourButton.addEventListener('click', () => {
    //     specialTourButton.classList.add('active');
    //     normalTourButton.classList.remove('active');
    //     window.scroll({
    //         top: 120,
    //         behavior: 'smooth'
    //     });
    //     normalBody.classList.add('d-none');
    //     normalBody.classList.remove('d-none');
    // });

    //tour-filter button
    const filterBtn = document.querySelector('.filter-btn');
    const filterBody = document.querySelector('.filter-body');
    filterBtn.addEventListener('click', () => {
        if (filterBody.classList.contains('d-none')) {
            filterBody.classList.remove('d-none');
            filterBody.classList.add('d-block');
        } else {
            filterBody.classList.add('d-none');
            filterBody.classList.remove('d-block');
        }
    })

    const tourProvince = document.querySelector('.tour-province');
    const tourCity = document.querySelector('.tour-city');

    tourProvince.addEventListener('change', () => {
        var selectedValue = tourProvince.value;
        if (selectedValue !== "0") {
            tourCity.classList.remove('d-none');
            tourCity.classList.add('d-block');
        }
    })

    const filterForm = document.querySelector('.filter-body');
    const resetBtn = document.querySelector('.reset-btn');
    resetBtn.addEventListener('click', () => {
        filterForm.reset();
        tourCity.classList.add('d-none');
    })
</script>            