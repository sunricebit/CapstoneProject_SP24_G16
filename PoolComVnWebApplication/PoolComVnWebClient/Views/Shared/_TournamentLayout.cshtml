<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
          crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <title>Home</title>
</head>

<body>
    <div class="main-background"></div>
    <header>
        <nav class="manage-nav">
            <div class="nav-menu d-flex align-items-center">
                <i class="fa-solid fa-bars nav-icon"></i>
            </div>
            <div class="logo-image d-flex justify-content-center align-items-center">
                <a href="">
                    <img src="~/images/logo.png" alt="PoolCom">
                    <span class="">PoolCom.</span>
                </a>
            </div>

            <div class="user-menu-btn">
                <i class="fa-solid fa-user user-icon"></i>
                <ul class="user-menu text-center">
                    <li><a href="">Profile</a></li>
                    <li><a href="">Logout</a></li>
                </ul>
            </div>
            <div class="menu-body ">
                <div class="exchange-nav d-flex justify-content-center align-items-center">
                    <i class="fa-solid fa-arrow-right-arrow-left"></i>
                </div>
                <div class="general-nav mx-0">
                    <div class="nav-body my-0 d-flex justify-content-lg-start
                        justify-content-center row">
                        <a href="">Tin tức</a>
                        <a href="">Giải đấu</a>
                        <a href="">Câu lạc bộ</a>
                        <a href="">Xếp hạng</a>
                        <a href="">Luật chơi</a>
                        <a href="">Liên hệ</a>
                        <a href="">Mở rộng</a>
                    </div>
                </div>
                <div class="tour-manage-nav d-flex justify-content-lg-start
                    justify-content-start row mx-0">
                    <a href="" class="tour-nav-btn">Tổng quan</a>
                    <a href="" class="tour-nav-btn">Sơ đồ</a>
                    <a href="" class="tour-nav-btn">Trận đấu</a>
                    <a href="" class="tour-nav-btn">Lên lịch đấu</a>
                    <a href="" class="tour-nav-btn">Người chơi</a>
                    <a href="" class="tour-nav-btn">Thống kê</a>
                </div>
            </div>
        </nav>
    </header>

    @RenderBody()
    
</body>

<script>

    //Handle option menu
    const navMenuBtn = document.querySelector('.nav-menu');
    const menuBody = document.querySelector('.menu-body');
    const tourManageNav = document.querySelector('.tour-manage-nav');
    const exchangNavBtn = document.querySelector('.exchange-nav');
    const generalNav = document.querySelector('.general-nav');

    let menuVisible = true;

    navMenuBtn.addEventListener('click', () => {
        if (menuVisible) {
            menuBody.classList.remove('d-none');
            menuBody.classList.add('d-flex');
        } else {
            menuBody.classList.add('d-none');
            menuBody.classList.remove('d-flex');
        }
        menuVisible = !menuVisible;
    });

    let isTourNavOn = true;

    exchangNavBtn.addEventListener('click', () => {
        if (isTourNavOn) {
            generalNav.classList.remove('d-none');
            generalNav.classList.add('d-flex');
            tourManageNav.classList.remove('d-flex');
            tourManageNav.classList.add('d-none');
        } else {
            generalNav.classList.add('d-none');
            generalNav.classList.remove('d-flex');
            tourManageNav.classList.add('d-flex');
            tourManageNav.classList.remove('d-none');
        }

        isTourNavOn = !isTourNavOn;
    })


    //Handle tour-nav
    const tourNavBtnList = document.querySelectorAll('.tour-nav-btn');
    tourNavBtnList.forEach((tourNavBtn) => {
        tourNavBtn.addEventListener('click', (event) => {
            event.preventDefault();
            tourNavBtn.classList.add('active');

            tourNavBtnList.forEach((btn) => {
                if (btn !== tourNavBtn) {
                    btn.classList.remove('active');
                }
            });
        });
    })

</script>

</html>