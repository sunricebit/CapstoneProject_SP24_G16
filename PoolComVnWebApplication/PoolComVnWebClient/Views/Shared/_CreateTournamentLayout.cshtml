<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
          crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <title>Home</title>
</head>

<body>
    <div class="main-background"></div>
    <header>
        <nav class="manage-nav">
            <div class="nav-menu d-flex align-items-center">
                <i class="fa-solid fa-bars nav-icon"></i>
            </div>
            <div class="logo-image d-flex justify-content-center align-items-center">
                <a href="">
                    <img src="~/images/logo.png" alt="PoolCom">
                    <span class="">PoolCom.</span>
                </a>
            </div>

            <div class="user-menu-btn">
                <i class="fa-solid fa-user user-icon"></i>
                <ul class="user-menu text-center">
                    <li><a href="">Hồ sơ</a></li>
                    <li><a href="">Đăng xuất</a></li>
                </ul>
            </div>
            <div class="menu-body ">
                <div class="nav-body my-0 d-flex justify-content-lg-start
                        justify-content-center row">
                    <a href="/NewsManage/Index">Tin tức</a>
                    <a href="/Tournament/TournamentList">Giải đấu</a>
                    <a href="">Câu lạc bộ</a>
                    <a href="">Xếp hạng</a>
                    <a asp-controller="home" asp-action="GameRules">Luật chơi</a>
                    <a asp-controller="home" asp-action="Contact">Liên hệ</a>
                    <a href="">Mở rộng</a>
                </div>
            </div>
        </nav>
    </header>

    <div class="tour-step-nav">
        <a href="/CreateTournament/StepOneCreateTournament" class="tour-step">
            <div class="step-number active">1</div>
            <div class="step-title">Cài đặt</div>
        </a>
        <div class="step-network-line"></div>
        <a href="/CreateTournament/StepTwoPlayerList" class="tour-step">
            <div class="step-number">2</div>
            <div class="step-title">Người chơi</div>
        </a>
        <div class="step-network-line"></div>
        <a href="/CreateTournament/StepThreeAddTable" class="tour-step">
            <div class="step-number">3</div>
            <div class="step-title">Bàn đấu</div>
        </a>
        <div class="step-network-line"></div>
        <a href="#step4" class="tour-step">
            <div class="step-number">4</div>
            <div class="step-title">Ảnh bìa</div>
        </a>
        <div class="step-network-line"></div>
        <a href="#step5" class="tour-step">
            <div class="step-number">5</div>
            <div class="step-title">Xếp trận</div>
        </a>
        <div class="step-network-line"></div>
        <a href="#step6" class="tour-step">
            <div class="step-number">6</div>
            <div class="step-title">Hoàn thành</div>
        </a>
    </div>

    @RenderBody()

</body>

<script>

    //Handle option menu
    const navMenuBtn = document.querySelector('.nav-menu');
    const menuBody = document.querySelector('.menu-body');

    let menuVisible = true;

    navMenuBtn.addEventListener('click', () => {
        if (menuVisible) {
            menuBody.classList.remove('d-none');
            menuBody.classList.add('d-flex');
        } else {
            menuBody.classList.add('d-none');
            menuBody.classList.remove('d-flex');
        }
        menuVisible = !menuVisible;
    });

    //Handle tour step
    const stepBtns = document.querySelectorAll('.step-number');
    stepBtns.forEach(btn=>{
        btn.addEventListener('click', () => {
            stepBtns.forEach(step=>{
                step.classList.remove('active');
            })
            btn.classList.add('active');
        })
    })

</script>

</html>