@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    string email = HttpContextAccessor.HttpContext.Request.Cookies["Email"];
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
          crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <title>Home</title>
</head>

<body>
    <div class="main-background"></div>
    <header>
        <nav class="manage-nav">
            <div class="back-btn">
                <i class="fa-solid fa-chevron-left"></i>
                <span>Trở lại</span>
            </div>
            <div class="logo-image d-flex justify-content-center align-items-center">
                <a href="">
                    <img src="~/images/logo.png" alt="PoolCom">
                    <span class="">PoolCom.</span>
                </a>
            </div>
            @if (email != null)
            {
                <div class="user col-2 d-flex justify-content-end">
                    <div class="user-name text-center">
                        <span>@email.Split("@")[0]</span>
                        <i class="fa-solid fa-caret-left"></i>
                    </div>
                    <ul class="user-menu text-center">
                        <li><a href="">Profile</a></li>
                        <li><a asp-action="Index" asp-controller="Club" asp-route-email="@email">Câu lạc bộ của tôi</a></li>
                        <li><a asp-controller="Authentication" asp-action="Logout">Logout</a></li>
                    </ul>
                </div>
            }
            else
            {
                <div class="login col-2 text-center ">
                    <a asp-controller="Authentication" asp-action="Login">Đăng nhập</a>
                </div>
            }
        </nav>
    </header>

    

    @RenderBody()

</body>

<script>

    const clubNavBtns = document.querySelectorAll('.club-nav-btn');

    clubNavBtns.forEach(clubNavBtn => {
        clubNavBtn.addEventListener('click', () => {
            clubNavBtns.forEach((btn) => {
                if (btn.classList.contains('active')) {
                    btn.classList.remove('active');
                }
            })
            clubNavBtn.classList.add('active');
        })
    })

</script>

</html>