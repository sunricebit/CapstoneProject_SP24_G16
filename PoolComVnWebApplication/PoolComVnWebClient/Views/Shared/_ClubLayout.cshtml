@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    string email = HttpContextAccessor.HttpContext.Request.Cookies["Email"];
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
          crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <title>Home</title>
</head>

<body>
    <div class="main-background"></div>
    <header>
        <nav class="manage-nav">
            <div class="back-btn">
                <i class="fa-solid fa-chevron-left"></i>
                <span>Trở lại</span>
            </div>
            <div class="logo-image d-flex justify-content-center align-items-center">
                <a href="">
                    <img src="~/images/logo.png" alt="PoolCom">
                    <span class="">PoolCom.</span>
                </a>
            </div>
         
        </nav>
    </header>
    @if (@ViewBag.Club == null)
    {
    <div class="dashboard-container container">
        <div class="row news-items p-0 m-0">
            <div class="item-content d-flex justify-content-center">
                <h3>Bạn chưa có câu lạc bộ</h3>
            </div>
        </div>
    </div>
}
else
{
    <div class="club-dashboard-nav">
        <div class="club-avt-bg d-flex justify-content-center">
            <div class="club-avt d-flex justify-content-center">
                    <img src="@ViewBag.Club.Avatar" alt="Club Avatar">
            </div>
        </div>
        <div class=" club-name text-center">
                @ViewBag.Club.ClubName
        </div>
        <div class="club-nav">
            <a asp-action="CLubDetails" asp-controller="Club" class="club-nav-btn">
                <i class="fa-solid fa-list-check fa-fade"></i>
                Quản lí
            </a>
            <a asp-action="Index" asp-controller="Club" class="club-post club-nav-btn active">
                <i class="fa-solid fa-newspaper fa-fade"></i>
                Bài viết
            </a>
            <a asp-action="ClubTournament" asp-controller="Club" class="club-nav-btn">
                <i class="fa-solid fa-trophy fa-flip"></i>
                Giải đấu
            </a>
            <a href="#" class="club-nav-btn">
                <i class="fa-solid fa-khanda fa-flip"></i>
                Trận đấu
            </a>
        </div>
        <div class="club-info">
            <div class="club-address">
                <div class="address-title">Địa chỉ:</div>
                    <div class="address-content">@ViewBag.Club.Address</div>
            </div>
            <div class="club-address">
                <div class="address-title">Liên hệ</div>
                    <div class="address-content">@ViewBag.Club.Phone</div>
            </div>
            <div class="club-address">
                <div class="address-title">Email</div>
                <div class="address-content">@ViewBag.AccountEmail</div>
            </div>
        </div>
    </div>
    }

    

    @RenderBody()

</body>

<script>

    const clubNavBtns = document.querySelectorAll('.club-nav-btn');

    clubNavBtns.forEach(clubNavBtn => {
        clubNavBtn.addEventListener('click', () => {
            clubNavBtns.forEach((btn) => {
                if (btn.classList.contains('active')) {
                    btn.classList.remove('active');
                }
            })
            clubNavBtn.classList.add('active');
        })
    })

</script>

</html>