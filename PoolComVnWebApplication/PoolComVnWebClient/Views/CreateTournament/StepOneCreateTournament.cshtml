</div>

<script>
    //Handle display filed
    const tourType = document.querySelector('.tour-type');
    const sizeBracket = document.querySelector('.size-bracket');
    const knockoutNumber = document.querySelector('.knockout-number');
    const knockoutOptions = document.querySelector('.knockout-options');
    const raceRound = document.querySelector('.race-round');
    const raceWin = document.querySelector('.race-win');
    const raceLose = document.querySelector('.race-lose');
    const removeGroupBtn = document.querySelector('.remove-group');
    const addGroupBtn = document.querySelector('.add-group');
    const raceLoseDisplay = document.querySelector('.race-lose-display');

    var isKnockoutOn = false;
    var isTourTypeSelected = false;
    var isSizeBracketSelected = false;
    var selectedOption;
    var isManyStageValue;

    knockoutOptions.disabled = true;

    tourType.addEventListener('change', () => {
        selectedOption = tourType.options[tourType.selectedIndex];
        isManyStageValue = selectedOption.getAttribute('isManyStage');
        knockoutOptions.disabled = !(isManyStageValue === 'true');
        isKnockoutOn = (isManyStageValue === 'true');
        if (isManyStageValue === 'true') {
            if (knockoutNumber.classList.contains('d-none')) {
                knockoutNumber.classList.remove('d-none');
            }
        }
        isTourTypeSelected = true;
        if (isManyStageValue === 'false') {
            if (!knockoutNumber.classList.contains('d-none')) {
                knockoutNumber.classList.add('d-none');
            }
            knockoutOptions.selectedValue = '2';
        }
        raceRoundHandle();
    })

    sizeBracket.addEventListener('change', () => {
        if (isKnockoutOn === false) {
            knockoutOptions.disabled = false;
        }
        var sizeBracketNum = sizeBracket.value;
        var knockoutHTML = '';

        if (Math.log2(sizeBracketNum) <= 2) {
            knockoutHTML += '<option value="2">2</option>'
        } else {
            for (var i = 1; i < Math.log2(sizeBracketNum); i++) {
                knockoutHTML += '<option value="' + (Math.pow(2, i)) + '">' + (Math.pow(2, i)) + '</option>'
            }
        }
        knockoutOptions.innerHTML = knockoutHTML;
        if (isKnockoutOn === false) {
            knockoutOptions.disabled = true;
        }
        isSizeBracketSelected = true;
        raceRoundHandle();
    })

    knockoutOptions.addEventListener('change', raceRoundHandle);

    function raceRoundHandle() {
        if (isTourTypeSelected === true && isSizeBracketSelected === true) {
            raceRound.classList.remove('d-none');

            var raceWinHTML = '';
            var winRoundNumber = Math.log2(sizeBracket.value);
            if (isManyStageValue === 'true') {
                winRoundNumber += 1;
            }
            for (var i = 0; i < winRoundNumber; i++) {
                raceWinHTML += '<div class="tour-input-line row">';

                if (i === (winRoundNumber - 1)) {
                    raceWinHTML += '<div class="round-name col-lg-6">CK</div>';
                } else {
                    raceWinHTML += '<div class="round-name col-lg-6">Vòng ' + (i + 1) + '</div>';
                }
                raceWinHTML += '<div class="col-lg-6">'
                    + '<input class="race-number" type="number" value="5" name="round' + (i + 1) + '">'
                    + '</div>'
                    + '</div>';
            }
            raceWin.innerHTML = raceWinHTML;

            if (isManyStageValue === 'true') {
                raceLoseDisplay.classList.remove('d-none');
                var raceLoseHTML = '';
                var loseRoundNumber = 2 * (Math.log2(sizeBracket.value) - Math.log2(knockoutOptions.value));
                console.log(loseRoundNumber, Math.log2(sizeBracket.value), Math.log2(knockoutOptions.value))
                for (var i = 0; i < loseRoundNumber; i++) {
                    raceLoseHTML += '<div class="tour-input-line row">'
                        + '<div class="round-name col-lg-6">Vòng ' + (i + 1) + '</div>'
                        + '<div class="col-lg-6">'
                        + '<input class="race-number" type="number" value="5" name="loseRound' + (i + 1) + '">'
                        + '</div>'
                        + '</div>';
                }
                raceLose.innerHTML = raceLoseHTML;
            } else {
                raceLose.innerHTML = '';
                raceLoseDisplay.classList.add('d-none');
            }
            console.log(isManyStageValue)
            addEventToRaceInput();
        }
    }

    function addEventToRaceInput() {
        const raceInputList = document.querySelectorAll('.race-number');
        raceInputList.forEach((element) => {
            element.addEventListener('click', function (event) {
                if (event.ctrlKey) {
                    this.classList.toggle('multi');
                }
            });
            element.addEventListener('keyup', () => {
                if (element.classList.contains('multi')) {
                    const multiInputList = document.querySelectorAll('.multi');
                    multiInputList.forEach((multiInput) => {
                        multiInput.value = element.value;
                    })
                }
            })
        });
    }

    removeGroupBtn.addEventListener('click', (e) => {
        e.preventDefault();
        const raceInputList = document.querySelectorAll('.race-number');
        raceInputList.forEach((element) => {
            element.classList.remove('multi');
        });
    })

    addGroupBtn.addEventListener('click', (e) => {
        e.preventDefault();
        const raceInputList = document.querySelectorAll('.race-number');
        raceInputList.forEach((element) => {
            element.classList.add('multi');
        });
    })

    function submitForm() {
        getAndSetRaceNumberString();

        document.getElementById('create-form').submit();
    }

    function getAndSetRaceNumberString() {
        var raceNumberInputs = document.querySelectorAll('.race-number');
        var raceNumberValues = {};

        raceNumberInputs.forEach(function (input) {
            var roundName = input.getAttribute('name');
            var value = input.value;

            var prefix = roundName.startsWith('round') ? 'W' : 'L';
            if (prefix == 'W') {
                raceNumberValues[roundName] = prefix + roundName.slice(5) + '-' + value;
            }
            else {
                raceNumberValues[roundName] = prefix + roundName.slice(9) + '-' + value;
            }
        });

        var raceNumberString = Object.values(raceNumberValues).join(',');

        document.getElementById('RaceNumberString').value = raceNumberString;
    }

    // Khai báo biến để lưu trữ dữ liệu nhập vào từ các input
    var tournamentNameValue = '';
    var descriptionValue = '';
    var startTimeValue = '';
    var endTimeValue = '';
    var gameTypeIdValue = '';
    var tournamentTypeIdValue = '';
    var maxPlayerNumberValue = '';
    var entryFeeValue = '';
    var prizeMoneyValue = '';
    var registrationDeadlineValue = '';

    // Hàm để cập nhật giá trị của các biến khi có sự thay đổi trên input
    function updateInputValues() {
        tournamentNameValue = document.getElementById('TournamentName').value;
        descriptionValue = document.getElementById('Description').value;
        startTimeValue = document.getElementById('StartTime').value;
        endTimeValue = document.getElementById('EndTime').value;
        gameTypeIdValue = document.getElementById('GameTypeId').value;
        tournamentTypeIdValue = document.getElementById('TournamentTypeId').value;
        maxPlayerNumberValue = document.getElementById('MaxPlayerNumber').value;
        entryFeeValue = document.getElementById('EntryFee').value;
        prizeMoneyValue = document.getElementById('PrizeMoney').value;
        registrationDeadlineValue = document.getElementById('RegistrationDeadline').value;
    }

    // Hàm để khôi phục giá trị đã lưu trữ vào các input khi quay lại step
    function restoreInputValues() {
        document.getElementById('TournamentName').value = tournamentNameValue;
        document.getElementById('Description').value = descriptionValue;
        document.getElementById('StartTime').value = startTimeValue;
        document.getElementById('EndTime').value = endTimeValue;
        document.getElementById('GameTypeId').value = gameTypeIdValue;
        document.getElementById('TournamentTypeId').value = tournamentTypeIdValue;
        document.getElementById('MaxPlayerNumber').value = maxPlayerNumberValue;
        document.getElementById('EntryFee').value = entryFeeValue;
        document.getElementById('PrizeMoney').value = prizeMoneyValue;
        document.getElementById('RegistrationDeadline').value = registrationDeadlineValue;
    }

    // Gọi hàm updateInputValues() khi có sự thay đổi trên input
    document.getElementById('create-form').addEventListener('input', updateInputValues);

    // Gọi hàm restoreInputValues() khi quay lại step
    restoreInputValues();

    //Handle active nav
    const createTourStepBtn = document.querySelector('.step-one');
    createTourStepBtn.classList.add('active');



    //Handle step btn
    const currentStep = document.getElementById('current-step');
    const tourId = document.getElementById('tour-id');
    var stepNum = parseInt(currentStep.value);
    var tourIdNum = parseInt(tourId.value);

    if(stepNum > 0){
        const stepLockList = document.querySelectorAll('.step-number');
        var from = 0;

        if (stepNum >= 1) { 
            from = 1;
            document.querySelector('.step-one').parentNode.href = "/CreateTournament/StepOneCreateTournament?TourId=" + tourIdNum;
            document.querySelector('.step-two').parentNode.href = "/CreateTournament/StepTwoAddBanner?TourId=" + tourIdNum;
        }
        if (stepNum >= 2) {
            from = 4;
            document.querySelector('.step-three').parentNode.href = "/CreateTournament/StepThreeReview?TourId=" + tourIdNum;
            document.querySelector('.step-four').parentNode.href = "/CreateTournament/StepFourAddTable?TourId=" + tourIdNum;
            document.querySelector('.step-five').parentNode.href = "/CreateTournament/StepFivePlayerList?TourId=" + tourIdNum;
        }
        if (stepNum >= 5) {
            from = 5;
            document.querySelector('.step-six').parentNode.href = "/CreateTournament/StepSixArrange?TourId=" + tourIdNum;
        }

        for (var i = 1; i <= from; i++) {
            const parent = stepLockList[i].parentNode;
            if (parent !== null && parent.classList.contains('disable')) {
                parent.classList.remove('disable');
            }
        }
    }
</script>